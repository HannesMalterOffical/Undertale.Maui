<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Views.EndPageBoss"
             Title="EndPage" 
             BackgroundColor="Black">

    <Grid
        
        Margin="24,52,24,0"
        ColumnDefinitions="*,*"
        RowDefinitions="Auto,*">

        <ImageButton
            WidthRequest="24"
            HeightRequest="24"
            Source="backarrow.png"
            Grid.Row="0"
            Grid.Column="0"
            HorizontalOptions="Start"
            VerticalOptions="Center"
            Clicked="BackButton_Clicked"
             />

        <ImageButton
            WidthRequest="24"
            HeightRequest="24"
            Source="imgmenu.png"
            Grid.Row="0"
            Grid.Column="1"
            HorizontalOptions="End"
            VerticalOptions="Center" />

        <!--Main content scrollview-->
        <ScrollView
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            HorizontalScrollBarVisibility="Never"
            VerticalScrollBarVisibility="Never"
            Margin="0,16,0,0">

            <VerticalStackLayout
                Spacing="18">

                <!--Monster Image-->
                <Image
                    Source="{Binding CharacterImage}"
                    Aspect="AspectFit"
                    HorizontalOptions="Fill"
                    HeightRequest="240"
                    Margin="24,0" />

                <Line></Line>

                <!-- BossMonster Name-->
                
                <Label
                    Margin="0,0,0,0"
                    TextColor="White"
                    Text="{Binding BossName}" />
                <Line></Line>

                

                <!-- BossMonster Subtitle-->
                <Label
                    Margin="0,0,0,0"
                    TextColor="White"
                    Text="{Binding BossQuote}" />
                <Line></Line>

                <!--Monster info-->
                <Label
                    Style="{StaticResource MonsterDetailsTextStyle}"
                    LineBreakMode="WordWrap"
                    Text="{Binding Description}"
                    TextColor="White"/>

                <!-- BossMonster info-->
                

                <!--Divider-->
                <Rectangle
                    HorizontalOptions="Fill"
                    HeightRequest="2"
                    Stroke="Transparent"
                    Fill="{StaticResource LightBorderColor}" />

                <!--Monster Gallery-->
                <Label
                    Style="{StaticResource MonsterHeaderSubtitleStyle}"
                    Text="Gallery" />

                <CollectionView
                    Margin="0,-6,0,0"
                    HeightRequest="400"
                    WidthRequest="400"
                    ItemsSource="{Binding CharacterImage}">

                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout
                            Orientation="Vertical"
                            ItemSpacing="16" >
                        </LinearItemsLayout>
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Image
                                Source="{Binding .}"
                                Aspect="AspectFill"
                                HorizontalOptions="Fill"
                                VerticalOptions="Fill"
                                WidthRequest="400"
                                HeightRequest="400">
                                <Image.Clip>
                                    <RoundRectangleGeometry
                                        Rect="0,0,400,400"
                                        CornerRadius="16" />
                                </Image.Clip>
                            </Image>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    

                </CollectionView>




            </VerticalStackLayout>
            
            

        </ScrollView>

    </Grid>


</ContentPage>
