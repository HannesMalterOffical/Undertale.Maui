<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Views.BeginningPage"
             Title="BeginningPage"
             BackgroundColor="Black">


    <Grid>

        <!--Front Page characters-->
        <Image
            x:Name="UndyneFronpage"
            Opacity="100"
            Source="undynefrontpage.jpg"
            VerticalOptions="Start"
            HorizontalOptions="Center"
            TranslationX="-750"
            TranslationY="140"
            WidthRequest="500"
            HeightRequest="200"/>

        <Image
            x:Name="asgorefrontpage"
            Opacity="100"
            Source="azgorefrontpage.png"
            VerticalOptions="Start"
            HorizontalOptions="Center"
            TranslationX="-700"
            TranslationY="140"
            WidthRequest="500"
            HeightRequest="400"/>

        <Image
            x:Name="frontpagebanner"
            Opacity="100"
            Source="undertalebanner.png"
            VerticalOptions="Start"
            HorizontalOptions="Center"
            TranslationX="0"
            TranslationY="-0"
            WidthRequest="1000"
            HeightRequest="580"/>

        <Image
            x:Name="torielfrontpage"
            Opacity="100"
            Source="torielfrontpage.png"
            VerticalOptions="Start"
            HorizontalOptions="Center"
            TranslationX="670"
            TranslationY="80"
            WidthRequest="600"
            HeightRequest="600"/>

        <Image
            x:Name="treefrontpage1"
            Opacity="100"
            Source="frontpagetree.png"
            VerticalOptions="Start"
            HorizontalOptions="Center"
            TranslationX="320"
            TranslationY="350"
            WidthRequest="200"
            HeightRequest="200"/>

        <Image
            x:Name="treefrontpage2"
            Opacity="100"
            Source="frontpagetree.png"
            VerticalOptions="Start"
            HorizontalOptions="Center"
            TranslationX="-320"
            TranslationY="350"
            WidthRequest="200"
            HeightRequest="200"/>

        <Image
            x:Name="SansFrontPage"
            Opacity="100"
            Source="undertalesansfrontpage.jpg"
            VerticalOptions="Start"
            HorizontalOptions="Center"
            TranslationX="670"
            TranslationY="540"
            WidthRequest="500"
            HeightRequest="200"/>

        <Image
            x:Name="PapyruFrontPage"
            Opacity="100"
            Source="papyrusfrontpage.jpg"
            VerticalOptions="Start"
            HorizontalOptions="Center"
            TranslationX="-700"
            TranslationY="540"
            WidthRequest="500"
            HeightRequest="200"/>

        <Image
            x:Name="FrontPageRiver"
            Opacity="100"
            Source="frontpageriver.png"
            VerticalOptions="Start"
            HorizontalOptions="Center"
            TranslationX="0"
            TranslationY="310"
            WidthRequest="400"
            HeightRequest="650"/>

        <VerticalStackLayout
            VerticalOptions="Center">

            <Button
                    Style="{StaticResource ButtonStyle}"
                    Text="Welcome To the Underground"
                    HorizontalOptions="Center"
                    Margin="0,12,0,6"
                    Clicked="ExploreNow_Clicked"/>
        </VerticalStackLayout>

     
    </Grid>
</ContentPage>